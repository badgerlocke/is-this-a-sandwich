<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-8">
      <h2><%= post.title %></h2>
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row justify-content-between mt-1">
        <form class="col-1" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-3">
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-2 my-auto" >
      <form  action="/post/vote/<%= post.id %>?_method=PUT" method="POST" id="vote-form">
        <div class="btn-group-vertical" role="group" aria-label="Vertical radio toggle button group">
          <input type="radio" class="btn-check" name="vote" id="toast" value="toast" autocomplete="off" checked="">
          <label class="btn btn-outline-primary" for="toast">Toast</label>
          <input type="radio" class="btn-check" name="vote" id="sandwich" value="sandwich" autocomplete="off">
          <label class="btn btn-outline-primary" for="sandwich">Sandwich</label>
          <input type="radio" class="btn-check" name="vote" id="taco" value="taco" autocomplete="off">
          <label class="btn btn-outline-primary" for="taco">Taco</label>
          <input type="radio" class="btn-check" name="vote" id="sushi" value="sushi" autocomplete="off">
          <label class="btn btn-outline-primary" for="sushi">Sushi</label>
          <input type="radio" class="btn-check" name="vote" id="breadbowl" value="breadbowl" autocomplete="off">
          <label class="btn btn-outline-primary" for="breadbowl">Soup w/ bread bowl</label>
          <input type="radio" class="btn-check" name="vote" id="calzone" value="calzone" autocomplete="off">
          <label class="btn btn-outline-primary" for="calzone">Calzone</label>
          <input type="radio" class="btn-check" name="vote" id="salad" value="salad" autocomplete="off">
          <label class="btn btn-outline-primary" for="salad">Salad</label>
          <button class="btn btn-primary" type="submit" id="vote-btn">VOTE</button>
        </div>
      </form>
      <!-- Hide below by default. In JS - when vote is cast, hide form and unhide below. Calculate percentages and fill out vote counts -->
      <div class="btn-group-vertical d-none mt-5" role="group" id="results" aria-label="Vertical listing of results">

        <div class="btn btn-outline-info" id="toast-result">Toast</div>

        <div class="btn btn-outline-info" id="sandwich-result">Sandwich</div>

        <div class="btn btn-outline-info" id="taco-result">Taco</div>

        <div class="btn btn-outline-info" id="sushi-result">Sushi</div>

        <div class="btn btn-outline-info" id="breadbowl-result">Soup w/ bread bowl</div>

        <div class="btn btn-outline-info" id="calzone-result">Calzone</div>
        <div class="btn btn-outline-info" id="salad-result">Salad</div>

      </div>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<script src="js/results.js"></script>
<%- include('partials/footer') -%>
