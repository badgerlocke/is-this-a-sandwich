<%- include('partials/header-noheading') -%>
<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"> -->
<body>
        <div class="container">
            <div class="container justify-content-center text-center">

                <h1><i class="fas fa-hotdog text-warning"></i></h1>
                <h3 class="text-success"> Is This a Sandwich?</h3>

                <div class="divider my-5"></div>
                <!-- <div class="btn btn-primary"> -->
                    <h2><a href="/auth/google" class="btn btn-primary">
                        <i class="fab fa-google left"></i> Log In With Google
                    </a></h2>
                <!-- </div> -->
                <div class="row justify-content-center">
                    <section class="col-6 mt-5">
                      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
                      <div class="alert alert-danger"><%= el.msg %></div>
                      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
                      messages.info.forEach( el => { %>
                      <div class="alert alert-info"><%= el.msg %></div>
                      <% }) %> <% } %>
                      <form action="/login" method="POST">
                        <div class="mb-3">
                          <label for="exampleInputEmail1" class="form-label"
                            >Email address</label
                          >
                          <input
                            type="email"
                            class="form-control"
                            id="exampleInputEmail1"
                            aria-describedby="emailHelp"
                            name="email"
                          />
                        </div>
                        <div class="mb-3">
                          <label for="exampleInputPassword1" class="form-label">Password</label>
                          <input
                            type="password"
                            class="form-control"
                            id="exampleInputPassword1"
                            name="password"
                          />
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                    </section>
                  </div>
                <div class="mt-5">
                    <!-- <p class="lead">Let's find out</p> -->
                    <img src="is-this-a-sandwich.png"></img>
                </div>
            </div>
        </div>

<%- include('partials/footer') -%>